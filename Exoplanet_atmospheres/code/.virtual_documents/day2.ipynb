def planck(T, lam):
    """Calculate Planck spectral radiance"""
    # Convert inputs to astropy quantities if they aren't already
    if not hasattr(T, 'unit'):
        T = T * u.K
    if not hasattr(lam, 'unit'):
        lam = lam * u.m
    
    num = 2 * h * c**2 / lam**5
    denom = np.exp((h*c/(lam*k_B*T)).to(u.dimensionless_unscaled)) - 1
    return num / denom


